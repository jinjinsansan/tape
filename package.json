{
  "name": "tape-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Tape式心理学サービス monorepo",
  "scripts": {
    "dev": "npm run dev --workspace web",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "upload-michelle-knowledge": "tsx scripts/michelle-knowledge/upload-to-rag.ts",
    "sinr-process-all": "tsx scripts/michelle-knowledge/sinr-process-all.ts",
    "create-assistant": "tsx scripts/michelle-knowledge/create-assistant.ts",
    "seed:psychiatry-cancel": "tsx scripts/seed-psychiatry-cancel.ts",
    "twa:init": "bubblewrap init --manifest twa-manifest.json",
    "twa:update": "bubblewrap update --manifest twa-manifest.json",
    "twa:build": "bubblewrap build"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.18.0"
  },
  "dependencies": {
    "@paypal/paypal-js": "^9.0.1",
    "@paypal/paypal-server-sdk": "^2.1.0",
    "@paypal/react-paypal-js": "^8.9.2",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "motion": "^12.29.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@bubblewrap/cli": "^1.24.1",
    "@types/chai": "^5.2.2",
    "@vitest/utils": "^4.0.15",
    "chai": "^6.2.1",
    "pathe": "^2.0.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
