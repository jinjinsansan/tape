{
  "crons": [
    {
      "path": "/api/internal/cron/diary-ai-comments",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/internal/cron/diary-reminder",
      "schedule": "0 13 * * *"
    },
    {
      "path": "/api/internal/cron/michelle-daily-diary",
      "schedule": "0 23 * * *"
    }
  ],
  "functions": {
    "apps/web/app/api/internal/cron/michelle-daily-diary/route.ts": {
      "includeFiles": "apps/web/md/**"
    },
    "apps/web/app/api/admin/comics/chunks/route.ts": {
      "includeFiles": "apps/web/md/**"
    },
    "apps/web/app/api/admin/comics/chunks/[chunkId]/route.ts": {
      "includeFiles": "apps/web/md/**"
    },
    "apps/web/app/api/admin/comics/generate/route.ts": {
      "maxDuration": 300,
      "memory": 3008,
      "includeFiles": "apps/web/md/**"
    }
  }
}
